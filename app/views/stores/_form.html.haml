= form_for(@store) do |f|
  - if @store.errors.any?
    #error_explanation
      %h2
        = pluralize(@store.errors.count, "error")
        prohibited this store from being saved:
      %ul
        - @store.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :location
    %br/
    = f.text_field :location
  .actions
    = f.submit
