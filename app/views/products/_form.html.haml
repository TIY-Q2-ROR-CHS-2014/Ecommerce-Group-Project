= form_for @product do |f|
  = render 'layouts/error_messages', object: @product
  %br
  = f.label :image
  = f.text_field :image
  %br

  = f.label :name
  = f.text_field :name
  %br

  = f.label :description
  = f.text_area :description
  %br

  = f.label :price
  = f.text_field :price
  %br

  = f.submit

= link_to 'Home', root_path


