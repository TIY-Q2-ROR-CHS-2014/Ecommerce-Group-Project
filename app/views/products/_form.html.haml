= form_for @rolodex do |f|
  = render 'layouts/error_messages', object: @rolodex
  %br
  = f.label :name
  = f.text_field :name
  %br

  = f.label :phone_number
  = f.text_field :phone_number
  %br

  = f.label :email
  = f.text_field :email
  %br

  = f.label :address
  = f.text_field :address
  %br

  = f.label :address_2
  = f.text_field :address_2
  %br

  = f.label :city
  = f.text_field :city
  %br

  = f.label :state
  = f.select :state, options_for_select(Rolodex::US_STATES), include_blank: '--- Select ---'
  %br

  = f.submit

= link_to 'Home', root_path


